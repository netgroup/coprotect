FROM ubuntu:16.04

RUN apt-get update && apt-get install -y openssh-server
RUN apt-get install -y nginx vim

RUN mkdir /var/run/sshd
RUN echo 'root:root' | chpasswd
RUN sed -i 's/PermitRootLogin prohibit-password/PermitRootLogin yes/' /etc/ssh/sshd_config

# SSH login fix. Otherwise user is kicked off after login
RUN sed 's@session\s*required\s*pam_loginuid.so@session optional pam_loginuid.so@g' -i /etc/pam.d/sshd

ENV NOTVISIBLE "in users profile"
RUN echo "export VISIBLE=now" >> /etc/profile

EXPOSE 22
#CMD ["/usr/sbin/sshd", "-D"]

# Use an official Python runtime as a parent image
FROM python:2.7

# Set the working directory to /app
WORKDIR /app

# Copy the current directory contents into the container at /app
RUN mkdir /app/crypto
RUN mkdir /app/web
RUN touch /app/__init__.py
RUN touch /app/crypto/__init__.py
COPY ./Client.py /app/
COPY ./crypto/ElGamal.py /app/crypto
COPY ./crypto/RSA.py /app/crypto
COPY ./crypto/AES.py /app/crypto
COPY ./crypto/Const.py /app/crypto
COPY ./clear_file.txt /app/
COPY ./client/web/ /app/web


# config NGINX
#RUN rm -v /etc/nginx/nginx.conf
#ADD web/nginx.conf /etc/nginx/
#
## Append "daemon off;" to the beginning of the configuration
#RUN echo "daemon off;" >> /etc/nginx/nginx.conf
#
## Expose ports
#EXPOSE 80
#
## Set the default command to execute
## when creating a new container
#CMD service nginx start

# Install any needed packages specified in requirements.txt
RUN pip install Flask
RUN pip install requests
RUN pip install pycryptodomex
RUN pip install flask_restplus
#RUN pip install psutil

# Make port 80 available to the world outside this container
EXPOSE 5002

# Define environment variable
#ENV NAME World

# Run app.py when the container launches
CMD ["python", "Client.py", "clear_file.txt", "dec_file.txt"]
#CMD ["bash"]
